extends layout

block header
  section.jumbotron.text-center
    .container
      h1 Customers
      p.lead.text-muted
        | Please scroll through the page to see your customers details
      p
        btn-toolbar(role="toolbar")
          btn-group.mr-2(role="group", aria-label="Useless button")
            button.btn.btn-primary.my-2(href='#') Do nothing
          btn-group.mr-2(role="group", aria-label="Useless button")
            button.btn.btn-secondary.my-2(href='#') Again

block content
  .album.py-5.bg-light
    .container
      .row
        each customer in customers
          .col-md-4
            .card.mb-4.shadow-sm
              //img.card-img-top(src='/avatars/avatar1.png', alt='Card image cap')
              svg.bd-placeholder-img.card-img-top(width='100%', height='100', xmlns='http://www.w3.org/2000/svg', preserveAspectRatio='xMidYMid slice', focusable='false', role='img', aria-label='Placeholder: Thumbnail')
                title Placeholder
                rect(width='100%', height='100%', fill= customer.color)
                // text(x='50%', y='50%', fill='#eceeef', dy='.3em') Testo a caso
              .card-body
                p.card-text
                  a(href="/customer/"+customer._id)= customer.name + " "+ customer.surname 
                  .btn-group
                    button.btn.btn-sm.btn-outline-secondary(type='button') View
                    button.btn.btn-sm.btn-outline-secondary(type='button') Edit
